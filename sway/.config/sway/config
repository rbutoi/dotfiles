# sway config

#
# basics
#
set $term      wezterm start --
set $term_tmux $term tmux new -ADs auto
set $web       firefox-nightly
set $menu      ~/bin/wofi-wrap.sh
set $editor    $term tmux new -ADs emacs emacsclient -nw -a ""
set $locker    "swaylock --daemonize --screenshots            \
  --indicator --indicator-radius 100 --indicator-thickness 7  \
  --effect-blur 5x5 --grace 0.5 --fade-in 0.25"

#
# input/output
#
input type:keyboard {
    xkb_options ctrl:nocaps
    repeat_delay 250
    repeat_rate 30
}
input type:pointer {
    accel_profile flat
    pointer_accel -0.4
}
# manages displays
exec_always   pkill kanshi; exec_always kanshi -c ~/.config/kanshi/$HOSTNAME

#
# startup applications
#
exec_always sh -c "pkill waybar; exec waybar"

exec systemd-cat dex -a -e SWAY                # autostart
exec systemd-cat udiskie --tray --appindicator # automount manager
                                               # clipboard
exec systemd-cat wl-paste -t text --watch clipman --notify store --no-persist
exec systemd-cat nm-applet --indicator         # network status
exec systemd-cat poweralertd                   # power notifications
exec systemd-cat wlsunset_here                 # sunset screen darken

# initial desktop
exec systemd-cat $web
exec systemd-cat $term_tmux
exec systemd-cat $editor
exec systemd-cat signal-desktop

# Chrome notifications have empty id/title.
for_window [app_id="^$" title="^$"] floating enable, move position 80 ppt 83 ppt
no_focus   [app_id="^$" title="^$"]

# per window config
for_window [app_id="gsimplecal"]                             move position mouse, move up 40 px, move left 20 px
for_window [class="Emacs"]                                   opacity 0.93
for_window [app_id="emacs"]                                  opacity 0.93
for_window [app_id="gnome-terminal-server" title="Terminal"] opacity 0.95
for_window [app_id="nemo"]                                   opacity 0.95
for_window [app_id="org.gnome.Nautilus"]                     opacity 0.95
for_window [app_id="blueman-manager"]                        floating enable
for_window [app_id="cinnamon-settings.py"]                   floating enable
for_window [app_id="eog"]                                    floating enable
for_window [app_id="exo-desktop-item-edit"]                  floating enable
for_window [app_id="gnome-control-center"]                   floating enable
for_window [app_id="goobuntu_indicator.py"]                  floating enable
for_window [app_id="gyrc"]                                   floating enable
for_window [app_id="nwg-look"]                               floating enable
for_window [app_id="org.gnome.Weather"]                      floating enable
for_window [app_id="pavucontrol"]                            floating enable
for_window [app_id="qalculate-gtk"]                          floating enable
for_window [app_id="wdisplays"]                              floating enable
for_window [app_id="xfce4-appfinder"]                        floating enable
for_window [app_id="zenity"]                                 floating enable
for_window [class="1Password"]                               floating enable
for_window [class="PCSX2"]                                   floating enable
for_window [class="steam_app_.*"]                            floating enable
for_window [class="steam_proton"]                            floating enable
for_window [title="Find Directory"]                          floating enable
for_window [title="Firefox - Sharing Indicator"]             floating enable
for_window [title="^(Open|Save) Files?$"]                    floating enable
for_window [title="^Close Firefox$"]                         floating enable
for_window [title="^Edit with Emacs FRAME$"]                 floating enable
for_window [title="^Picture in picture$"]                    floating enable
assign [class="hl2_linux"]                                   workspace 3
assign [class="Signal"]                                      workspace 5
assign [class="discord"]                                     workspace 4
# all chrome apps
assign [app_id="^chrome-"]                                   workspace 4
assign [title="Google(.com)? - Calendar"]                    workspace 4
# chrome apps steal Mod4 for some reason
for_window [app_id="chrome"]                               shortcuts_inhibitor disable

#
# display
#
font Noto Sans 12
default_border pixel 6
smart_borders on
smart_gaps on
hide_edge_borders --i3 both
floating_maximum_size 0 x 0
titlebar_border_thickness 0

set $base00_ "#282828"
set $base02_ "#504945"
set $base03_ "#665c54"
set $base04_ "#bdae93"
set $base08_ "#fb4934"
set $base0C_ "#8ec07c"
set $base0D_ "#83a598"
set $base10_ "#231f20"

client.focused          $base0D_   $base0D_   $base00_ $base0C_ $base0D_
client.focused_inactive $base02_c0 $base02_c0 $base04_ $base04_ $base02_
client.unfocused        $base02_c0 $base10_c0 $base04_ $base03_ $base02_
client.urgent           $base08_   $base08_   $base00_ $base08_ $base08_
gaps inner   12
gaps outer    8
 # to grab scroll/tabbar, no right/top gap
gaps top    -12
gaps right  -12

#
# Keybindings - basics:
#
set $mod Mod4
set $alt Mod1

set $left   h
set $down   j
set $up     k
set $right  l

bindsym $mod+Return          exec $term
bindsym $mod+Shift+Return    exec swaymsg                 \
  '[app_id="wezterm" title="^[^[].* \[auto\]$"] focus' || \
  $term_tmux
bindsym $mod+w               exec swaymsg                 \
 '[app_id="[Gg]oogle-chrome"] focus'                   || $web
bindsym $mod+Shift+w         exec $web
bindsym $mod+e               exec swaymsg                 \
  '[app_id="wezterm" title=" \[emacs\]$"] focus'       || \
  swaymsg '[app_id="emacs"] focus'                     || \
  swaymsg '[class="Emacs"] focus'                      || $editor
bindsym $mod+Shift+e         exec $editor
bindsym $mod+c               kill
bindsym $mod+space           exec $menu
bindsym $alt+F2              exec $menu "-Srun"
bindsym $mod+Shift+space     exec $menu "-Sdmenu,drun,run" # also run, too much for default
bindsym $mod+q               exec wlogout -p layer-shell
bindsym $mod+Shift+q         reload
bindsym $mod+Shift+Backspace exit
#
# Moving around:
#
bindsym $mod+$left        focus left
bindsym $mod+$down        focus down
bindsym $mod+$up          focus up
bindsym $mod+$right       focus right
# _move_ the focused window with the same, but add Shift
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up
bindsym $mod+Shift+$right move right
#
# Workspaces:
#
workspace_auto_back_and_forth yes
mouse_warping output
# switch to workspace
bindsym --no-repeat $mod+1                            workspace 1
bindsym --no-repeat $mod+2                            workspace 2
bindsym --no-repeat $mod+3                            workspace 3
bindsym --no-repeat $mod+4                            workspace 4
bindsym --no-repeat $mod+5                            workspace 5
bindsym --no-repeat $mod+6                            workspace 6
bindsym --no-repeat $mod+7                            workspace 7
bindsym --no-repeat $mod+8                            workspace 8
bindsym --no-repeat $mod+9                            workspace 9
bindsym --no-repeat $mod+0                            workspace 0
bindsym --no-repeat $mod+Ctrl+1                       workspace 1
bindsym --no-repeat $mod+Ctrl+2                       workspace 2
bindsym --no-repeat $mod+Ctrl+3                       workspace 3
bindsym --no-repeat $mod+Ctrl+4                       workspace 4
bindsym --no-repeat $mod+Ctrl+5                       workspace 5
bindsym --no-repeat $mod+Ctrl+6                       workspace 6
bindsym --no-repeat $mod+Ctrl+7                       workspace 7
bindsym --no-repeat $mod+Ctrl+8                       workspace 8
bindsym --no-repeat $mod+Ctrl+9                       workspace 9
bindsym --no-repeat $mod+Ctrl+0                       workspace 0
# move focused container to workspace
bindsym --no-repeat $mod+Shift+1    move container to workspace 1
bindsym --no-repeat $mod+Shift+2    move container to workspace 2
bindsym --no-repeat $mod+Shift+3    move container to workspace 3
bindsym --no-repeat $mod+Shift+4    move container to workspace 4
bindsym --no-repeat $mod+Shift+5    move container to workspace 5
bindsym --no-repeat $mod+Shift+6    move container to workspace 6
bindsym --no-repeat $mod+Shift+7    move container to workspace 7
bindsym --no-repeat $mod+Shift+8    move container to workspace 8
bindsym --no-repeat $mod+Shift+9    move container to workspace 9
bindsym --no-repeat $mod+Shift+0    move container to workspace 0
# other monitor
bindsym --no-repeat $mod+Shift+n    move container to output left ; focus output left
bindsym --no-repeat $mod+Shift+m    move container to output right; focus output right
# next and previous workspace
bindsym --no-repeat $mod+n          focus output left
bindsym --no-repeat $mod+m          focus output right
bindsym --no-repeat $mod+Ctrl+p     workspace prev_on_output
bindsym --no-repeat $mod+Ctrl+n     workspace next_on_output
bindsym --whole-window $mod+button4 workspace prev_on_output
bindsym --whole-window $mod+button5 workspace next_on_output
#
# Layout stuff:
#
floating_modifier $mod
bindsym $mod+Shift+b  splith
bindsym $mod+Shift+v  splitv
bindsym $mod+s        layout stacking
bindsym $mod+Shift+s  layout tabbed
bindsym $mod+d        layout toggle split
bindsym $mod+f        fullscreen
bindsym $mod+t        floating toggle
bindsym $mod+Ctrl+t   focus mode_toggle
bindsym $mod+Shift+t  sticky toggle
bindsym $mod+a        focus parent
bindsym $mod+Shift+a  focus child
#
# Scratchpad:
#
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus       scratchpad show
bindsym $mod+z           scratchpad show
#
# Resizing containers:
#
bindsym $mod+Ctrl+$left   resize shrink width  100px
bindsym $mod+Ctrl+$down   resize grow   height 100px
bindsym $mod+Ctrl+$up     resize shrink height 100px
bindsym $mod+Ctrl+$right  resize grow   width  100px

#
# App keys:
#
bindsym $mod+Shift+Ctrl+l     exec $locker
bindsym Print                 exec sway-interactive-screenshot
bindsym XF86MonBrightnessUp   exec brightnessctl set 5%+ && notify-send -c volume "$((100 * $(brightnessctl g) / $(brightnessctl m)))"
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- && notify-send -c volume "$((100 * $(brightnessctl g) / $(brightnessctl m)))"
bindsym XF86AudioMute         exec pactl set-sink-mute   @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume  exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume  exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Pause                 exec pamixer --unmute --increase 1 && notify-send -c volume "$(pamixer --get-volume)"
bindsym Scroll_Lock           exec pamixer --unmute --decrease 1 && notify-send -c volume "$(pamixer --get-volume)"
bindsym $mod+Scroll_Lock      exec pamixer --toggle-mute
bindsym $mod+F2               exec ~/bin/yamaha_vol down
bindsym $mod+F3               exec ~/bin/yamaha_vol up
bindsym $mod+F4               exec ~/bin/yamaha_toggle_link.sh
bindsym $mod+Shift+F4         exec notify-send -t 1500 ~/bin/yamaha_match_bedroom.py "$(~/bin/yamaha_match_bedroom.py)"
bindsym $mod+F1               exec ~/bin/yamaha_or_playerctl.sh play_pause
bindsym $mod+Shift+F2         exec ~/bin/yamaha_or_playerctl.sh previous
bindsym $mod+Shift+F3         exec ~/bin/yamaha_or_playerctl.sh next
bindsym XF86AudioPlay         exec ~/bin/yamaha_or_playerctl.sh play_pause
bindsym XF86AudioPrev         exec ~/bin/yamaha_or_playerctl.sh previous
bindsym XF86AudioNext         exec ~/bin/yamaha_or_playerctl.sh next
bindsym XF86AudioStop         exec ~/bin/yamaha_or_playerctl.sh stop
bindsym XF86Calculator        exec rofi -show calc
bindsym $mod+y                exec $term yt &> ~/.cache/.sway_yt || notify-send 'yt failed'
bindsym $mod+v                exec clipman pick --notify --tool wofi
bindsym $mod+$alt+h           exec $term --fullscreen htop
bindsym $mod+Shift+Ctrl+i     exec notify-send swayinfo "$(~/.local/bin/swayinfo)"
bindsym $mod+Shift+Ctrl+k     exec sh -c 'notify-send killing...; kill "$(~/.local/bin/swayinfo | grep "^pid=" | choose -f = 1)"'

# system configs
include /etc/sway/config.d/*

# host-specific config
include ~/.config/sway/specific

